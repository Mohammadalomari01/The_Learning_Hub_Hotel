@model IEnumerable<The_Learning_Hub_Hotel.Models.PReservation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CheckInDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckOutDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Toltalprice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoicepdf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CheckInDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckOutDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Toltalprice)
            </td>
            <td>
                    <!-- Other details here -->
                    @if (!string.IsNullOrEmpty(item.Invoicepdf))
                    {
                        <a asp-action="DownloadInvoice" asp-route-id="@item.Reservationsid" class="btn btn-primary">
                            Download Invoice
                        </a>
                    }

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room.Roomid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Reservationsid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Reservationsid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Reservationsid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
