@model The_Learning_Hub_Hotel.Models.PUser
@{

    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Profile</h1>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <div class="text-center mb-4">
                            <div class="rounded-circle overflow-hidden" style="width: 150px; height: 150px;">
                                @if (!string.IsNullOrEmpty(Model.Imagepath))
                                {
                                    <img src="~/Images/@Model.Imagepath" class="img-fluid" alt="Profile Image" />
                                }
                                else
                                {
                                    <img src="~/Images/default.png" class="img-fluid" alt="Default Profile Image" />
                                }
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label font-weight-bold">First Name:</label>
                            <p class="form-control-static">@Model.Fname</p>
                        </div>
                        <div class="form-group">
                            <label class="control-label font-weight-bold">Last Name:</label>
                            <p class="form-control-static">@Model.Lname</p>
                        </div>
                        <div class="form-group">
                            <label class="control-label font-weight-bold">Phone Number:</label>
                            <p class="form-control-static">@Model.PhoneNumber</p>
                        </div>
                        <div class="form-group">
                            <label class="control-label font-weight-bold">Email:</label>
                            <p class="form-control-static">@Model.Email</p>
                        </div>
                        <div class="form-group text-center mt-4">
                            <a href="@Url.Action("Edit")" class="btn btn-primary mr-2">Edit</a>
                            <a asp-controller="LoginAndRegister" asp-action="Login" class="btn btn-secondary">Logout</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>